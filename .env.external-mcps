# LLM Fallback Configuration
LLM_FALLBACK_ENABLED=true
LLM_FALLBACK_ORDER=local,cloud
LLM_COMPLEXITY_THRESHOLD=0.6
LLM_COST_TRACKING=true

# ==========================================
# Search API Keys (Phase 1)
# ==========================================
# Tavily API (Primary) - REQUIRED
