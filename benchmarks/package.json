{
  "name": "@mcp-ecosystem/benchmarks",
  "version": "1.0.0",
  "description": "Performance benchmarks for MCP Advanced Multi-Agent Ecosystem",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "benchmark": "node dist/index.js",
    "benchmark:llm": "node dist/llm-benchmarks.js",
    "benchmark:search": "node dist/search-benchmarks.js",
    "benchmark:integration": "node dist/integration-benchmarks.js",
    "benchmark:report": "node dist/generate-report.js",
    "benchmark:compare": "node dist/compare-results.js",
    "benchmark:ci": "npm run benchmark:llm && npm run benchmark:search && npm run benchmark:report",
    "clean": "rimraf dist reports",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "json2csv": "^6.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}