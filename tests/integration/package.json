{
  "name": "integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for cross-phase MCP server workflows",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "clean": "rimraf coverage dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^11.1.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.test.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}